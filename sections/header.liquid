<div class="width">
  <a href="/" class="header-logo">
    <img
      src="{{ settings.logo | image_url }}"
      width="{{ section.settings.logo_width }}"
      height="auto"
      alt="{{ shop.name }}"
      loading="lazy"
    >
  </a>
</div>
<style>
  header {
    padding: 9px 0;
  }
  .header-logo{
    max-width:{{ settings.logo_width }}px;
    display:block;
  }
</style>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header"
}
{% endschema %}
