<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayani</title>
    {{ content_for_header }}
    {% style %}
      :root{
        --font-body-family:{{ settings.body_font }};
        --font-heading-family:{{ settings.header_font }}
        --page-width: {{ settings.page_width }}px;
        --collections-width:{{ settings.collections_width }}px;
        --color-dark-text:{{ settings.dark }};
        --color-light-text:{{ settings.light }};
        --color-accent-text:{{ settings.accent }};
        --color-beige-text:{{ settings.beige }};
        --color-brown-text:{{ settings.brown }};
        --break-point: 960px;
      }

      /* Reset */
      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        box-sizing: border-box;
        height: 100%;
      }


      body {
        min-height: 100%;
        margin: 0;
      }

      img,
      svg {
        display: block;
        width: 100%;
      }

      button,
      input,
      select,
      textarea {
        outline: none;
        border: none;
        background: transparent;
      }

      a {
        text-decoration: none;
      }

      li {
        list-style: none;
      }
    {% endstyle %}
    <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
  </head>
  <body>
    {% section 'header' %}
    {{ content_for_layout }}
  </body>
</html>
